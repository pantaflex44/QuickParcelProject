{
    "name": "quick-parcel-project",
    "version": "3.0.0",
    "description": "Quick parcel project package",
    "default": "index.html",
    "repository": "https://github.com/pantaflex44/QuickParcelProject",
    "author": "Christophe LEMOINE",
    "license": "MIT",
    "homepage": "/",
    "dependencies": {
        "@parcel/transformer-postcss": "^2.5.0",
        "connect": "^3.7.0",
        "dayjs": "^1.11.2",
        "mkdirp": "^1.0.4",
        "parcel": "^2.5.0",
        "puppeteer": "^14.1.0",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-router-dom": "^6.3.0",
        "redux": "^4.2.0",
        "sass": "^1.51.0",
        "serve-static": "^1.15.0",
        "source-map-url": "^0.4.1",
        "svgo": "^2.8.0"
    },
    "devDependencies": {
        "@babel/core": "^7.17.10",
        "@babel/preset-env": "^7.17.10",
        "@babel/preset-react": "^7.16.7",
        "@parcel/babel-preset-env": "^2.5.0",
        "@parcel/transformer-sass": "^2.5.0",
        "@testing-library/dom": "^8.13.0",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.2.0",
        "@types/jest": "^27.5.1",
        "autoprefixer": "^10.4.7",
        "babel-jest": "^28.1.0",
        "eslint-plugin-react-hooks": "^4.5.0",
        "helmet": "^5.0.2",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^28.1.0",
        "jest-transform-stub": "^2.0.0",
        "lodash.escaperegexp": "^4.1.2",
        "postcss-plugin": "^1.0.0",
        "react-helmet-async": "^1.3.0",
        "react-icons": "^4.3.1",
        "react-scripts": "^5.0.1",
        "react-snap": "^1.23.0",
        "react-test-renderer": "^18.1.0",
        "react-transition-group": "^4.4.2",
        "replace-in-file": "^6.3.2"
    },
    "scripts": {
        "dev:clean": "rm -rf pre-dist/*",
        "dev:parcel": "NODE_ENV=development parcel ./src/index.html --open --dist-dir ./pre-dist",
        "build:clean": "rm -rf dist/*",
        "build:parcel": "NODE_ENV=production parcel build ./src/index.html --public-url ./ --dist-dir ./dist --no-source-maps",
        "clean": "npm run dev:clean && npm run build:clean",
        "dev": "npm run dev:clean && npm run dev:parcel",
        "build": "npm run build:clean && npm run build:parcel && cp ./src/.htaccess ./dist/.htaccess",
        "postbuild": "react-snap && node ./postbuild.js",
        "test": "jest",
        "test-watch": "jest --watchAll",
        "serve": "node serve.js"
    },
    "babel": {
        "presets": [
            "@parcel/babel-preset-env",
            "@babel/preset-react"
        ]
    },
    "jest": {
        "verbose": true,
        "clearMocks": true,
        "coverageDirectory": "coverage",
        "testEnvironment": "jsdom",
        "transform": {
            "^.+\\.jsx?$": "babel-jest"
        },
        "setupFilesAfterEnv": [
            "./tests.config.js"
        ],
        "moduleNameMapper": {
            "\\.(css|less|scss)$": "jest-transform-stub",
            "\\.(jpg|ico|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub"
        }
    },
    "reactSnap": {
        "source": "dist",
        "port": 8080,
        "publicPath": "/",
        "preloadImages": true,
        "skipThirdPartyRequests": true
    }
}
